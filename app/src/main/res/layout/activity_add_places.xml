<?xml version="1.0" encoding="utf-8"?>

<layout 
        xmlns:android="http://schemas.android.com/apk/res/android" 
        xmlns:tools="http://schemas.android.com/tools" 
        xmlns:app="http://schemas.android.com/apk/res-auto">
        
        <android.support.constraint.ConstraintLayout 
                android:layout_width="match_parent" 
                android:layout_height="match_parent" 
                tools:context=".Activity.AddPlacesActivity">

                <LinearLayout 
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content" 
                        android:orientation="vertical" 
                        android:layout_marginTop="8dp" 
                        app:layout_constraintTop_toTopOf="parent" 
                        app:layout_constraintStart_toStartOf="parent" 
                        android:layout_marginStart="15dp" 
                        app:layout_constraintEnd_toEndOf="parent" 
                        android:layout_marginEnd="15dp" 
                        android:id="@+id/linearLayout">

                        <TextView 
                                android:layout_width="match_parent" 
                                android:layout_height="wrap_content" 
                                android:layout_marginTop="50dp" 
                                android:id="@+id/lattitude_txt" 
                                android:textSize="18dp" 
                                android:text="Latitude : " />

                        <TextView 
                                android:layout_width="match_parent" 
                                android:layout_height="wrap_content" 
                                android:layout_marginTop="15dp" 
                                android:id="@+id/longitude_txt" 
                                android:textSize="18dp" 
                                android:text="Longitude : " />

                </LinearLayout>

                <LinearLayout 
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content" 
                        android:layout_marginTop="15dp" 
                        android:layout_marginStart="15dp" 
                        android:layout_marginEnd="15dp" 
                        android:id="@+id/linear2" 
                        android:orientation="vertical" 
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <TextView 
                                android:layout_width="match_parent" 
                                android:layout_height="match_parent" 
                                android:text="Issue Address" 
                                android:textColor="@color/black" 
                                android:textSize="15dp" 
                                android:fontFamily="@font/futur"/>

                        <EditText 
                                android:layout_width="match_parent" 
                                android:layout_height="wrap_content" 
                                android:id="@+id/street_editText" 
                                android:hint="Street Name/Address" />

                        <TextView 
                                android:layout_width="match_parent" 
                                android:layout_height="match_parent" 
                                android:text="Category (Water, Electricity, PWD, Health)" 
                                android:textColor="@color/black" 
                                android:textSize="15dp" 
                                android:fontFamily="@font/futur"/>

                        <EditText 
                                android:layout_width="match_parent" 
                                android:layout_height="wrap_content" 
                                android:id="@+id/slots_EditText" 
                                android:layout_marginTop="12dp" 
                                android:hint="Enter Category" />

                        <TextView 
                                android:layout_width="match_parent" 
                                android:layout_height="match_parent" 
                                android:text="Description" 
                                android:textColor="@color/black" 
                                android:textSize="15dp" 
                                android:fontFamily="@font/futur"/>

                        <EditText 
                                android:layout_width="match_parent" 
                                android:layout_height="wrap_content" 
                                android:id="@+id/desc_editText" 
                                android:layout_marginTop="12dp" 
                                android:hint="Describe Your Issue" />

                </LinearLayout>

                <Button 
                        android:id="@+id/upload_btn" 
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content" 
                        app:layout_constraintTop_toBottomOf="@id/linear2" 
                        android:text="Submit" 
                        android:textColor="@color/white" 
                        android:fontFamily="@font/futur" 
                        android:background="@color/fb" 
                        android:layout_marginTop="20dp" 
                        app:layout_constraintStart_toStartOf="parent" 
                        android:layout_marginStart="15dp" 
                        app:layout_constraintEnd_toEndOf="parent" 
                        android:layout_marginEnd="15dp"/>

        </android.support.constraint.ConstraintLayout>

</layout>
